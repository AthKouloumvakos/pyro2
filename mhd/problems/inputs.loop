[driver]
max_steps = 500
tmax = 1.0

init_tstep_factor = 1.0
fix_dt = 0.005


[compressible]
limiter = 0
cvisc = 0.1


[io]
basename = advect_


[eos]
gamma = 1.4


[mesh]
nx = 128
ny = 64
xmin = -1.0
ymin = -0.5
xmax = 1.0
ymax = 0.5

xlboundary = periodic
xrboundary = periodic

ylboundary = periodic
yrboundary = periodic


[vis]
dovis = 1


[loop]
v0 = 0.0
r = 0.3
a0 = 1.e-3
