# simple inputs files for the unsplit CTU hydro scheme

[driver]
max_steps = 500
tmax = 0.02

max_dt_change = 1.e33
init_tstep_factor = 1.0

cfl = 1.0

[io]
basename = gaussian_
dt_out = 0.01


[mesh]
nx = 64
ny = 64
xmax = 1.0
ymax = 1.0

xlboundary = neumann
xrboundary = neumann

ylboundary = neumann
yrboundary = neumann


[diffusion]
k = 1.0


[gaussian]
t_0 = 0.0001


