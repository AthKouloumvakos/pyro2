# simple inputs files for the four-corner problem.

[driver]
max_steps = 1000
tmax = 100.0


[io]
basename = bubble_
n_out = 100


[mesh]
nx = 128
ny = 256
xmax = 4.0
ymax = 8.0

xlboundary = outflow
xrboundary = outflow

ylboundary = hse
yrboundary = hse


[bubble]
scale_height = 10.0
dens_base = 0.1

x_pert = 2.0
y_pert = 2.0
r_pert = 0.25
pert_amplitude_factor = 1.1


[compressible]
grav = -0.1

limiter = 2
